{
    "name": "@lootsystem/core",
    "version": "1.0.0",
    "description": "Core library for the loot generation system",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "loot",
        "diablo",
        "rpg",
        "random"
    ],
    "license": "MIT"
}